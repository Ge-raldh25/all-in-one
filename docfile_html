# Utiliser Nginx comme base
FROM nginx:alpine

# Supprimer la page index par d√©faut de Nginx
RUN rm -rf /usr/share/nginx/html/*

# Copier les fichiers de l'app dans le dossier HTML de Nginx
COPY . /usr/share/nginx/html/

# Exposer le port 80
EXPOSE  80

# Lancer Nginx
CMD ["nginx", "-g", "daemon off;"]
